# Configuration for my personal website. It's expected that it'll be
# self-contained and static. See also,
# https://github.com/evaryont/evaryont.github.io
server {
  listen   80;
  server_name evaryont.me;

  access_log <%= node['nginx']['log_dir'] %>/evaryont.me.log combined;
  root /home/<%= node['ranchhand']['admin_name'] %>/public;

  location / {
    index index.html;
    autoindex off;
  }
}
