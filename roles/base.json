{
  "name": "base",
  "description": "Base role applied to every node",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "passwordless": false,
        "include_sudoers_d": true,
        "sudoers_defaults": [
          "env_reset",
          "mail_badpass",
          "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
          "insults"
        ],
        "groups": [ ],
        "users": [ "colin" ]
      }
    },
    "chef_client": {
      "interval": 1620,
      "splay": 600,
      "log_dir": "/var/log/chef",
      "log_file": "chef-client.log",
      "reload_config": false,
      "config": {
        "log_level": "info",
        "chef_server_url": "https://api.opscode.com/organizations/evaryont",
        "validation_client_name": "evaryont-validator",
        "ssl_verify_mode": "verify_peer",
        "verify_api_cert": true
      }
    },
    "motd": {
      "color": true
    },
    "nginx": {
      "repo_source": "nginx",
      "version": "1.6.2",
      "status": {
        "port": 80
      },
      "default_site_enabled": false
    },
    "sshd": {
      "sshd_config": {
        "Port": 22,
        "Protocol": 2,
        "AllowUsers": "colin",
        "X11Forwarding": "no",
        "AuthorizedKeysFile": ".ssh/authorized_keys",
        "ChallengeResponseAuthentication": "no",
        "UsePAM": "yes",
        "PrintMotd": "no",
        "AuthorizedKeysFile": ".ssh/authorized_keys",
        "PasswordAuthentication": "no"
      }
    }
  },
  "override_attributes": {
    "omnibus_updater": {
      "version": "11.16.4",
      "remove_chef_system_gem": true,
      "restart_chef_service": true
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[chef-sugar::default]",
    "recipe[omnibus_updater]",
    "recipe[chef_handler::default]",
    "recipe[chef_handler::json_file]",
    "recipe[brightbox-ruby::default]",
    "recipe[apt::default]",
    "recipe[git::default]",
    "recipe[sudo::default]",
    "recipe[sysstat::default]",
    "recipe[logrotate::default]",
    "recipe[chef-client::config]",
    "recipe[chef-client::service]",
    "recipe[chef-client::delete_validation]",
    "recipe[ranchhand::happy_admins]",
    "recipe[ranchhand::sshd]",
    "recipe[motd::knife_status]",
    "recipe[ranchhand::update-motd]"
  ]
}
